---
import SEOHead from '../components/SEOHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import ScrollToTop from '../components/ScrollToTop.astro';
import { site } from '../config/site';
import '../styles/global.css';

const gaId = import.meta.env.PUBLIC_GA_ID;

export interface Props {
  title: string;
  description: string;
  ogImage?: string;
  canonicalUrl?: string;
  pubDate?: Date;
  updatedDate?: Date;
  isArticle?: boolean;
  breadcrumbs?: { name: string; url: string }[];
  noindex?: boolean;
  additionalJsonLd?: Record<string, any>[];
}

const { title, description, ogImage, canonicalUrl, pubDate, updatedDate, isArticle, breadcrumbs, noindex, additionalJsonLd } =
  Astro.props;
---

<!doctype html>
<html lang="ja">
  <head>
    {site.gtmId && (
      <script is:inline set:html={`(function(w,d,s,l,i){w[l]=w[l]||[];w[l].push({'gtm.start':
      new Date().getTime(),event:'gtm.js'});var f=d.getElementsByTagName(s)[0],
      j=d.createElement(s),dl=l!='dataLayer'?'&l='+l:'';j.async=true;j.src=
      'https://www.googletagmanager.com/gtm.js?id='+i+dl;f.parentNode.insertBefore(j,f);
      })(window,document,'script','dataLayer','${site.gtmId}');`} />
    )}
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="generator" content={Astro.generator} />
    <link rel="icon" type="image/svg+xml" href={site.faviconSvg} />
    <link rel="apple-touch-icon" href={site.appleTouchIcon} />
    <link rel="sitemap" href="/sitemap.xml" />

    <!-- Google Fonts: Noto Sans JP -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      rel="stylesheet"
      href="https://fonts.googleapis.com/css2?family=Noto+Sans+JP:wght@400;500;700&display=swap"
    />

    <SEOHead
      title={title}
      description={description}
      ogImage={ogImage}
      canonicalUrl={canonicalUrl}
      pubDate={pubDate}
      updatedDate={updatedDate}
      isArticle={isArticle}
      breadcrumbs={breadcrumbs}
      noindex={noindex}
      additionalJsonLd={additionalJsonLd}
    />

    {gaId && <script async src={`https://www.googletagmanager.com/gtag/js?id=${gaId}`} />}
    {
      gaId && (
        <script
          is:inline
          set:html={`window.dataLayer=window.dataLayer||[];function gtag(){dataLayer.push(arguments);}gtag('js',new Date());gtag('config','${gaId}');`}
        />
      )
    }
  </head>
  <body class="min-h-screen flex flex-col bg-white text-gray-800 font-sans">
    {site.gtmId && (
      <noscript><iframe src={`https://www.googletagmanager.com/ns.html?id=${site.gtmId}`}
      height="0" width="0" style="display:none;visibility:hidden"></iframe></noscript>
    )}
    <Header />
    <main class="flex-1">
      <slot />
    </main>
    <Footer />
    {!isArticle && <ScrollToTop />}
  </body>
</html>
