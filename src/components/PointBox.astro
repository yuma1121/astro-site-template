---
export interface Props {
  points: string[];
}

const { points } = Astro.props;
---

{
  points && points.length > 0 && (
    <div class="border border-blue-200 rounded bg-white overflow-hidden mb-8">
      <div class="bg-blue-600 px-4 py-2 flex items-center gap-2">
        <svg class="w-4 h-4 text-white shrink-0" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><circle cx="12" cy="12" r="10"/><line x1="12" y1="16" x2="12" y2="12"/><line x1="12" y1="8" x2="12.01" y2="8"/></svg>
        <span class="text-sm font-bold text-white">この記事のポイント</span>
      </div>
      <ul class="px-4 py-3 space-y-2">
        {points.map((point) => (
          <li class="flex items-start gap-2 text-sm leading-relaxed text-gray-600">
            <svg class="w-4 h-4 text-blue-500 mt-0.5 shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2.5" d="M5 13l4 4L19 7"></path></svg>
            <span set:html={point} />
          </li>
        ))}
      </ul>
    </div>
  )
}
