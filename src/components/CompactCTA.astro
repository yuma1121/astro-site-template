---
export interface Props {
  name: string;
  url: string;
  image?: string;
  catchphrase?: string;
  label?: string;
}

const { name, url, image, catchphrase, label = '詳細を見る →' } = Astro.props;
---

<a
  href={url}
  target="_blank"
  rel="nofollow sponsored noopener noreferrer"
  class="flex items-center gap-4 border border-blue-100 bg-blue-50/50 rounded-lg p-4 no-underline hover:bg-blue-50 transition-colors group"
>
  {image && (
    <img src={image} alt={name} class="w-24 sm:w-32 h-auto rounded border border-gray-200 shrink-0" width="128" height="67" loading="lazy" />
  )}
  <div class="min-w-0 flex-1">
    <p class="text-sm font-bold text-gray-900 mb-0.5">{name}</p>
    {catchphrase && (
      <p class="text-xs text-blue-600 font-medium mb-0">{catchphrase}</p>
    )}
  </div>
  <span class="shrink-0 text-xs sm:text-sm font-bold text-blue-600 group-hover:text-blue-700 whitespace-nowrap">
    {label}
  </span>
</a>
